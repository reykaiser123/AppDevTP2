<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projectpt2.Pages.LoginPage"
             Title="LoginPage"
             BackgroundColor="#611726">
    <VerticalStackLayout>
        <Label 
            Text="This is LoginPage"
            FontSize="20"
            FontAttributes="Bold"
            Margin="20"
            TextColor="White"
            HorizontalOptions="Center" />
        <Button
            x:Name="signupbtn"
            Text="Signup"
            Margin="20"
            Clicked="signupbtn_Clicked">
        </Button>

    </VerticalStackLayout>
</ContentPage>