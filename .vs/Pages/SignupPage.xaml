<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projectpt2.Pages.SignupPage"
             Title="SignupPage"
             Background="Green">
    <VerticalStackLayout>
        <Label 
        Text="This is SignUpPage"
        FontSize="20"
        FontAttributes="Bold"
        Margin="20"
        TextColor="White"
        HorizontalOptions="Center" />
        <Button
        x:Name="loginbtn"    
        Text="Login"
        Margin="20"
        Clicked="loginbtn_Clicked">
        </Button>


    </VerticalStackLayout>
</ContentPage>