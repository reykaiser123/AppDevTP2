<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.News"
             Title="NEWS"
             BackgroundColor="#ADC179">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">

            <!-- Header -->
            <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                <!-- Title -->
                <Label Grid.Column="1"
                       Text="NEWS"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="White"
                       FontSize="18"/>

                <!-- Sort Button -->
                <Button Grid.Column="2"
                        Text="Sort"
                        FontSize="14"
                        TextColor="White"
                        BackgroundColor="#6C534D"
                        CornerRadius="8"
                        WidthRequest="60"
                        HeightRequest="28"
                        VerticalOptions="Center"
                        HorizontalOptions="End"
                        />
            </Grid>

            <!-- News Card -->
            <Border BackgroundColor="#DCE5B6"
                     Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">

                    <!-- Image -->
                    <Border Padding="0"
                    StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>

                        <Image Source="sampleimage.png"
                       Aspect="AspectFill"
                       HeightRequest="140">
                            <Image.Clip>
                                <RoundRectangleGeometry CornerRadius="8" />
                            </Image.Clip>
                        </Image>
                    </Border>
                    <Border BackgroundColor="#F0EAD2"
        Padding="10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>

                        <VerticalStackLayout Spacing="6">

                                           <Label Text="News Title"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"/>
                                            <Label Text="dd / mm / yy"
                               FontSize="12"
                               TextColor="#6C534D"/>

                                            <Label Text="Lorem ipsum"
                               FontSize="13"
                               TextColor="Black"/>

                                            <Label Text="Excepteur efficient emerging, minim veniam anim aute carefully curated Ginza conversation exquisite perfect nostrud nisi intricate Content. Qui international first-class nulla ut. Punctual adipiscing, essential lovely queen tempor eiusmod irure. Exclusive izakaya charming Scandinavian impeccable aute quality of life soft power pariatur Melbourne occaecat discerning. Qui wardrobe aliquip, et Porter destination Toto remarkable officia Helsinki excepteur Basset hound. Zürich sleepy perfect consectetur."
                               FontSize="13"
                               TextColor="Black"/>

                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
