<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.GachaBanner"
             Title="GachaBanner">
    
    <Grid RowDefinitions="Auto, *, Auto">

        <Border Grid.Row="0" BackgroundColor="#ADC179" StrokeShape="RoundRectangle 0,0,10,10" Padding="10">
            <Grid ColumnDefinitions="30, *, 30">
                <BoxView Grid.Column="0" Color="White" WidthRequest="30" HeightRequest="30" HorizontalOptions="Start" Margin="0,0,10,0" />
                <Label Grid.Column="1" Text="LIMITED BANNER" FontSize="20" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>
        </Border>

        <Grid Grid.Row="1" BackgroundColor="#DDE5B6" Padding="10">
            <Grid RowDefinitions="Auto, *">

                <Grid Grid.Row="0" ColumnDefinitions="Auto, Auto, *, Auto, Auto" Padding="5">

                    <Border Grid.Column="0" BackgroundColor="#C0C0C0" StrokeShape="RoundRectangle 5" Padding="2" Margin="0,0,5,0">
                        <BoxView Color="#70A070" WidthRequest="60" HeightRequest="60" />
                    </Border>

                    <Border Grid.Column="1" BackgroundColor="#C0C0C0" StrokeShape="RoundRectangle 5" Padding="2" Margin="0,0,10,0">
                        <BoxView Color="#70A070" WidthRequest="60" HeightRequest="60" />
                    </Border>

                    <HorizontalStackLayout Grid.Column="3" Spacing="5" VerticalOptions="Center">
                        <Border BackgroundColor="#6C584D" StrokeShape="RoundRectangle 10" Padding="5" >
                            <HorizontalStackLayout Spacing="5">
                                <BoxView Color="#FFFFFFB2" WidthRequest="20" HeightRequest="20" CornerRadius="10"/>
                                <Label Text="9999999" TextColor="White" FontSize="16" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Grid.Column="4" Spacing="5" VerticalOptions="Center">
                        <Border BackgroundColor="#6C584D" StrokeShape="RoundRectangle 10" Padding="5" >
                            <HorizontalStackLayout Spacing="5">
                                <BoxView Color="#FFFFFFB2" WidthRequest="20" HeightRequest="20" CornerRadius="10"/>
                                <Label Text="9999999" TextColor="White" FontSize="16" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </HorizontalStackLayout>
                </Grid>

                <Grid Grid.Row="1" Margin="0,10,0,0">

                    <BoxView Color="#ADC179" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />

                    <VerticalStackLayout VerticalOptions="End" HorizontalOptions="Center" Margin="0,0,0,20">
                        <Label Text="Nahida" FontSize="36" TextColor="White" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                        <HorizontalStackLayout Spacing="2" HorizontalOptions="Center" Margin="0,5,0,5">
                            <Label Text="★" TextColor="Yellow" FontSize="25" />
                            <Label Text="★" TextColor="Yellow" FontSize="25" />
                            <Label Text="★" TextColor="Yellow" FontSize="25" />
                            <Label Text="★" TextColor="Yellow" FontSize="25" />
                            <Label Text="★" TextColor="Yellow" FontSize="25" />
                        </HorizontalStackLayout>
                        <Label Text="Physic of Purity" FontSize="18" TextColor="LightGray" HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>

                    <Border BackgroundColor="#000000" Opacity="0.7" StrokeShape="RoundRectangle 5" Padding="10,5" HorizontalOptions="Center" VerticalOptions="End" Margin="0,0,0,140">
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="Time Remaining:" TextColor="White" FontSize="14" />
                            <Label Text="00 : 00 : 00" TextColor="Red" FontSize="14" FontAttributes="Bold" />
                        </HorizontalStackLayout>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" BackgroundColor="#DDE5B6" Padding="10">
            <Grid ColumnDefinitions="*, Auto, Auto, Auto" HorizontalOptions="Fill">

                <BoxView Color="#6C584D" WidthRequest="30" HeightRequest="30" CornerRadius="15" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" />

                <HorizontalStackLayout Grid.Column="1" Grid.ColumnSpan="3" HorizontalOptions="End" Spacing="10" Margin="0">
                    <Button Text="Draw ×1 $" BackgroundColor="#6C584D" TextColor="White" FontSize="18" Padding="20,10" CornerRadius="10" />
                    <Button Text="Draw ×10 $" BackgroundColor="#6C584D" TextColor="White" FontSize="18" Padding="20,10" CornerRadius="10" />
                </HorizontalStackLayout>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
