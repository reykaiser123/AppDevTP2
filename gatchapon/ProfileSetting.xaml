<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.ProfileSetting"
             Title="ProfileSetting"
             Shell.BackgroundColor="#ADC179"
             Shell.TitleColor="White"
             Shell.ForegroundColor="White"
             
             BackgroundColor="#E5F0C4">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">
            <Border BackgroundColor="#DDE5B6" StrokeShape="RoundRectangle 10" Padding="25">
                <VerticalStackLayout Spacing="30">

                    <HorizontalStackLayout Spacing="10">
                        <!-- Profile Picture Border -->
                        <Border
                            WidthRequest="94"
                            HeightRequest="94"
                            StrokeShape="RoundRectangle 47"
                            Background="#C1B7A1"
                            HorizontalOptions="Start"
                            VerticalOptions="Center">
                            <ImageButton
                                x:Name="ProfileImageButton"
                                Source="profile_placeholder.png"
                                BackgroundColor="Transparent"
                                Aspect="AspectFill"
                                CornerRadius="47"
                                Clicked="OnProf" />
                        </Border>

                        <!-- Username + Change Username Button -->
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label x:Name="Userlabel"
                                   Text="Username Placeholder"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   FontSize="20" />
                            <Button
                                Text="Change Username"
                                BackgroundColor="#8B6F4E"
                                TextColor="White"
                                Padding="5,2"
                                Margin="10,0,0,0"
                                Clicked="Cnamebtn" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" TextColor="Black" FontAttributes="Bold"/>

                        <!-- ==== THIS IS THE LINE I FIXED ==== -->
                        <Label x:Name="EmailDisplayLabel" 
                               Text="example.google@gmail.com" 
                               TextColor="Gray"/>

                        <Label Text="Phone number" TextColor="Black" FontAttributes="Bold"/>
                        <Label Text="+0901 234 5678" TextColor="Gray"/>
                        <Button Text="Change Phone Number"
                                BackgroundColor="#8B6F4E" 
                                TextColor="White"
                                Margin="10"
                                Padding="5,2"
                                Clicked="Cphonebtn"/>
                    </VerticalStackLayout>

                    <Button Text="Log-out"
                            BackgroundColor="#E57373" 
                            TextColor="White" 
                            Padding="8"
                            Clicked="OnLogout"/>

                </VerticalStackLayout>
            </Border>

            <!-- Settings section -->
            <Border BackgroundColor="#DDE5B6" StrokeShape="RoundRectangle 10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Settings" TextColor="#6C584D" FontAttributes="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Image Source="question_icon.png" WidthRequest="32" HeightRequest="32"
                               VerticalOptions="Center" />
                        <Label Text="Dark Mode" TextColor="#6C584D" VerticalOptions="Center"/>
                        <Switch IsToggled="False"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                        <Image Source="question_icon.png" WidthRequest="32" HeightRequest="32"
                               VerticalOptions="Center" />
                        <Label Text="Push Notifications" TextColor="#6C584D" VerticalOptions="Center"/>
                        <Switch IsToggled="False"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Information section -->
            <Border BackgroundColor="#DDE5B6" StrokeShape="RoundRectangle 10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Information" TextColor="#6C584D" FontAttributes="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <HorizontalStackLayout Spacing="10" Margin="0,5">
                        <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAppV" />
                        </HorizontalStackLayout.GestureRecognizers>
                        <Image Source="question_icon.png" WidthRequest="32" HeightRequest="32"
                               VerticalOptions="Center" />
                        <Label Text="App Version" TextColor="#6C584D" VerticalOptions="Center"/>
                        <Label Text="v0.1" TextColor="#6C584D" VerticalOptions="Center" HorizontalOptions="End"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10" Margin="0,5">
                        <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSup" />
                        </HorizontalStackLayout.GestureRecognizers>
                        <Image Source="question_icon.png" WidthRequest="32" HeightRequest="32"
                               VerticalOptions="Center" />
                        <Label Text="Support" TextColor="#6C584D" VerticalOptions="Center"/>
                        <Label Text=">" TextColor="#6C584D" VerticalOptions="Center" HorizontalOptions="End"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>