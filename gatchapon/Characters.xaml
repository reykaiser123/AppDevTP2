<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.Characters"
             BackgroundColor="#4C763B"
             Title="Characters">

    <Grid Padding="0"
          RowDefinitions="Auto,*">

        <VerticalStackLayout BackgroundColor="#C6D87C"
                             Padding="10,20"
                             Grid.Row="0">

            <Grid ColumnDefinitions="Auto,*,Auto"
                  VerticalOptions="Center">

                <Image Source="menu_icon.png"
                       HeightRequest="24"
                       WidthRequest="24"
                       Grid.Column="0"/>

                <Label Text="CHARACTERS"
                       Grid.Column="1"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"/>

                <BoxView WidthRequest="24"
                         HeightRequest="24"
                         Grid.Column="2"
                         Opacity="0"/>

            </Grid>

            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 20"
                    Shadow="{x:Null}"
                    Padding="10,5"
                    Margin="0,15,0,0">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Source="filter_icon.png"
                           HeightRequest="20"
                           WidthRequest="20"
                           Grid.Column="0"/>
                    <SearchBar Placeholder="Search Characters"
                               Grid.Column="1"
                               BackgroundColor="Transparent"
                               PlaceholderColor="Gray"
                               TextColor="Black"/>
                </Grid>
            </Border>
        </VerticalStackLayout>

        <ScrollView Grid.Row="1">
            <CollectionView ItemsLayout="HorizontalList"
                            Margin="15"
                            BackgroundColor="#C6D87C">
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Reynold</x:String>
                        <x:String>Oswell</x:String>
                        <x:String>Mell</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border x:DataType="x:String"
                                WidthRequest="100"
                                HeightRequest="140"
                                Padding="5"
                                Margin="10"
                                BackgroundColor="White"
                                StrokeShape="RoundRectangle 15">
                            <Border.Shadow>
                                <Shadow Opacity="0.5"
                                        Radius="10"
                                        Offset="0,5" />
                            </Border.Shadow>
                            <VerticalStackLayout>
                                <Image Source="character_placeholder.png"
                                       HeightRequest="80"
                                       Aspect="AspectFill"/>

                                <Label Text="{Binding .}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="End"
                                       TextColor="Black"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>