<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.Login">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame BackgroundColor="#B5C9A3"    
           CornerRadius="20"
           HasShadow="True"
           Padding="20"
           VerticalOptions="Center"
           Grid.Row="1">
            <VerticalStackLayout Spacing="15">

                <Label Text="Email"
                   TextColor="#333333"
                   FontAttributes="Bold" />
                <Border StrokeThickness="0"
                    BackgroundColor="#F0F8F0"
                    Padding="10"
                    HeightRequest="55"
                    StrokeShape="RoundRectangle 5">
                    <Entry Placeholder="Enter Email"
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       VerticalOptions="Center"/>
                </Border>

                <Label Text="Password"
                   TextColor="#333333"
                   FontAttributes="Bold" />
                <Border StrokeThickness="0"
                    BackgroundColor="#F0F8F0"
                    Padding="10"
                    HeightRequest="55"
                    StrokeShape="RoundRectangle 5">
                    <Entry Placeholder="Enter Password"
                       IsPassword="True"
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       VerticalOptions="Center"/>
                </Border>

                <Grid ColumnDefinitions="*,Auto">
                    <HorizontalStackLayout Spacing="5" Grid.Column="0">
                        <CheckBox Color="#333333" />
                        <Label Text="Remember Me"
                           VerticalOptions="Center"
                           TextColor="#333333"/>
                    </HorizontalStackLayout>
                    <Label Text="Forgot password?"
                       TextDecorations="Underline"
                       TextColor="#333333"
                       FontAttributes="Bold"
                       HorizontalOptions="End"
                       VerticalOptions="Center"
                       Grid.Column="1"/>
                </Grid>

                <Button Text="Login"
                    BackgroundColor="#73605D"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,10,0,0"/>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Don't have an account?" TextColor="#333333"/>
                    <Label Text="Click here"
                       TextDecorations="Underline"
                       TextColor="#333333"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>