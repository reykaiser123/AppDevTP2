<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.Login"
             BackgroundColor="#E5F0C4">

    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

        <Label Text="Email"
						   FontAttributes="Bold"
						   TextColor="#333333" />
        <Entry Placeholder="Email address"
						   BackgroundColor="#F0F8F0"
							TextColor="Black"
						   x:Name="EmailEntry"
						   ReturnType="Next"
						   Keyboard="Email"
						   ClearButtonVisibility="WhileEditing"
                       />

        <Label Text="Password"
						   FontAttributes="Bold"
						   TextColor="#333333" />
        <Entry Placeholder="Password"
						   IsPassword="True"
						   BackgroundColor="#F0F8F0"
						    TextColor="Black"
						   x:Name="PasswordEntry"
						   ClearButtonVisibility="WhileEditing" />

        <Button Text="Sign In"
							BackgroundColor="#73605D"
							TextColor="White"
							CornerRadius="10"
							HorizontalOptions="FillAndExpand"
							FontAttributes="Bold"
                        	Clicked="OnSignInClicked"
						/>

        <Label Text="Forgot password?"
						   HorizontalOptions="Start"
						   TextColor="#333333"
						   FontAttributes="Bold">
        </Label>

    </VerticalStackLayout>

</ContentPage>
