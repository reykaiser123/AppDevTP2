<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.Register"
             BackgroundColor="#ADC179">

    <Grid VerticalOptions="Center" Padding="20">

        <Border StrokeShape="RoundRectangle 20"
            StrokeThickness="0"
            BackgroundColor="#DDE5B6"
            Padding="20"
            HorizontalOptions="Fill"
            VerticalOptions="Center"
            >

            <VerticalStackLayout Spacing="10">


                <Label Text="Email" TextColor="Black"
                       FontAttributes="Bold"/>
                <Border StrokeThickness="0"
                  BackgroundColor="#E7E8D6"
                  Padding="10"
                  HeightRequest="60"
                  StrokeShape="RoundRectangle 10">
                    <Entry Placeholder="Enter Email"
                           x:Name="emailEntryReg"
                      PlaceholderColor="Gray"
                      TextColor="Black"
                      VerticalOptions="Center"/>
                </Border>

                <Label Text="Password" TextColor="Black" FontAttributes="Bold"/>
                <Border StrokeThickness="0"
                    BackgroundColor="#E7E8D6"
                    Padding="10"
                    HeightRequest="60"
                    StrokeShape="RoundRectangle 10">
                    <Entry Placeholder="Enter Password"
                           x:Name="passwordEntryReg"
                        IsPassword="True"
                        PlaceholderColor="Gray"
                        TextColor="Black"
                        VerticalOptions="Center"/>
                </Border>

                <Label Text="Confirm Password" TextColor="Black" FontAttributes="Bold"/>
                <Border StrokeThickness="0"
                       BackgroundColor="#E7E8D6"
                       Padding="10"
                       HeightRequest="60"
                       StrokeShape="RoundRectangle 10">
                    <Entry Placeholder="Confirm Password"
                           x:Name="confirmPass"
                           IsPassword="True"
                           PlaceholderColor="Gray"
                           TextColor="Black"
                           VerticalOptions="Center"/>
                </Border>

                <Button Text="Register"
                        FontAttributes="Bold"
                        FontSize="18"
                        BackgroundColor="#8A7A6A"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="0,10,0,0"
                        />

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
