<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.ResultPage"
             Title="ResultPage">
    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto,Auto" Padding="20">

            <!-- Pull counter -->
            <Label x:Name="PullCountLabel"
               Grid.Row="0"
               TextColor="White"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

            <!-- Result grid -->
            <CollectionView x:Name="ResultCollection"
                        Grid.Row="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        ItemsLayout="HorizontalGrid, 2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="False"
                           BackgroundColor="Transparent"
                           Padding="5"
                           Margin="5"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                            <Image Source="{Binding Image}"
                               HeightRequest="100"
                               WidthRequest="100"
                               Aspect="AspectFit"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Pull Again button -->
            <Button Grid.Row="2"
                Text="Pull Again"
                Clicked="OnPullAgainClicked"
                BackgroundColor="#6B63FF"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,10,0,0"/>

            <!-- Close button -->
            <Button Grid.Row="3"
                Text="Close"
                Clicked="OnCloseClicked"
                BackgroundColor="#9B84EE"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,10,0,0"/>
        </Grid>
    </ScrollView>
</ContentPage>