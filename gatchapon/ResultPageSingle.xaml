<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.ResultPageSingle"
             Title="ResultPageSingle"
             Background="#ADC179">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

            <Label x:Name="goldcoin"
               Text=""
               TextColor="White"
               HorizontalOptions="Center"
               FontSize="18"/>
            
            <Label x:Name="PullCountLabel"
               Text="Total pulls: 0 / 80"
               TextColor="White"
               HorizontalOptions="Center"
               FontSize="18"/>

            <Image x:Name="ResultImage"
               WidthRequest="200"
               HeightRequest="200"
               Aspect="AspectFit"
               HorizontalOptions="Center"/>

            <Label x:Name="ResultLabel"
               Text=""
               TextColor="White"
               HorizontalOptions="Center"
               FontSize="18"/>

            <Button Text="Pull Again" 
                Clicked="OnPullAgainClicked"
                BackgroundColor="#7b6cd4"
                TextColor="White"/>

            <Button Text="Close" 
                Clicked="OnCloseClicked"
                BackgroundColor="#9b8ee8"
                TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>