<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gatchapon.TodoPage"
             Title="Add New Task" BackgroundColor="#ADC179">
    <VerticalStackLayout Padding="30" Spacing="15"
                         VerticalOptions="Center">

        <Label x:Name="TitleLabel"
               Text="Create a New Task"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#6C584D"
               HorizontalOptions="Center"/>

        <Border BackgroundColor="#f5f1d6"
                StrokeShape="RoundRectangle 10"
                Padding="10">
            <Entry x:Name="TaskNameEntry"
                   Placeholder="Enter task name..."
                   TextColor="#6C584D"
                   PlaceholderColor="#8a7970"/>
        </Border>
        
        <VerticalStackLayout Spacing="5">
            <Label Text="Difficulty"
                   FontAttributes="Bold"
                   TextColor="#6C584D"/>
            <HorizontalStackLayout Spacing="10" x:Name="DifficultyLayout">
                <RadioButton x:Name="EasyButton"
                             Content="Easy"
                             GroupName="Difficulty"
                             IsChecked="True"/>
                <RadioButton x:Name="MediumButton"
                             Content="Medium"
                             GroupName="Difficulty"/>
                <RadioButton x:Name="HardButton"
                             Content="Hard"
                             GroupName="Difficulty"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        
        <Button x:Name="SaveButton"
                Text="Save Task"
                BackgroundColor="#6C584D"
                TextColor="#F0EAD2"
                CornerRadius="20"
                FontAttributes="Bold"
                Clicked="OnSaveTaskClicked"
                HorizontalOptions="Fill"/>

    </VerticalStackLayout>
</ContentPage>